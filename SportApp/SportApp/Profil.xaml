<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportApp.Profil"
             Title="Profil"
             BackgroundColor="{AppThemeBinding Dark=Black, Light=White }">
    <ContentPage.Content>
        <StackLayout>
            <ImageButton Source="bmi.png" Padding="10" CornerRadius="50" Margin="50,50,50,0" WidthRequest="100" HeightRequest="100" BackgroundColor="{AppThemeBinding Dark=#66CDAA, Light=#186049 }" Clicked="Button_Cliked_BMI" >
            </ImageButton>
            <Frame BorderColor="Black" 
                   Padding="-2"
                   WidthRequest="100" 
                   HeightRequest="100" 
                   CornerRadius="100" 
                   Margin="50,20"
                   BackgroundColor="White">
                <StackLayout>
                    <Label Text="Tryb jasny/ciemny" FontSize="Large" HorizontalOptions="Center"  Margin="20,10,20,10" TextColor="Black"/>
                    <Switch Toggled="Handle_Toggled" HorizontalOptions="Center" OnColor="{AppThemeBinding Dark=#dbd6ce, Light=#464646 }" ThumbColor="{AppThemeBinding Dark=#66CDAA, Light=#186049 }"/>
                </StackLayout>
            </Frame>
                
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>