<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportApp.Exercise">
    <ContentPage.Content>
        <StackLayout>

            <RelativeLayout>
                <Frame BorderColor="#247158"
                    CornerRadius="60"
                    Padding="11"
                    RelativeLayout.XConstraint="50"
                    RelativeLayout.YConstraint="15"
                    RelativeLayout.WidthConstraint="300"
                    RelativeLayout.HeightConstraint="50">
                    <Label x:Name="trainingLabel" FontSize="25" CharacterSpacing="1" TextColor="Black" Margin="0,-3,0,0" VerticalOptions="Center" HorizontalOptions="Center"></Label>
                </Frame>

                <Button      Text="ADD"
                         CornerRadius="50"
                         FontSize="30"
                         TextColor="White"
                         BackgroundColor="#247158"
                         RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1, Constant=-120}"
                         RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1, Constant=-120}"
                         RelativeLayout.WidthConstraint="100"
                         RelativeLayout.HeightConstraint="100"
                         Clicked="OnImageButtonClicked_Plus">
                </Button>
            </RelativeLayout>
            <ListView> //here need to add items like part of list not label
                
                
            </ListView>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>
