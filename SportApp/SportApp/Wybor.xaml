<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportApp.Wybor">
    
    <StackLayout RadioButtonGroup.GroupName="training">
        <Label Text="What are you training?" TextColor="Black" FontSize="30" Margin="40,40,0,60"></Label>
        <RadioButton Content="Upper Body" CheckedChanged="UpperBody" FontSize="25" BorderWidth="3" BorderColor="#247158" CornerRadius="100" Margin="30,10" Padding="20" BackgroundColor="White"></RadioButton>
        <RadioButton Content="Lower Body" CheckedChanged="LowerBody" FontSize="25" BorderWidth="3" BorderColor="#247158" CornerRadius="100" Margin="30,10" Padding="20" BackgroundColor="White"></RadioButton>
        <RadioButton Content="Full Body Workout" CheckedChanged="FBW" FontSize="25" BorderWidth="3" BorderColor="#247158" CornerRadius="100" Margin="30,10" Padding="20" BackgroundColor="White"></RadioButton>
        <ImageButton Clicked="OnButtonClicked_Next" Source="next.png" Margin="220,180,0,10" WidthRequest="10" HeightRequest="80" BackgroundColor="White"></ImageButton>
    </StackLayout>
</ContentPage>